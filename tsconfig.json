{
  "version": "2.0.0",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "platform/app/*": ["metaphactory/web/src/main/app/ts/*"],
      "platform/api/*": ["metaphactory/web/src/main/api/*"],
      "platform/components/*": ["metaphactory/web/src/main/components/*"],
      "researchspace/*": ["researchspace/web/src/main/ts/*"],

      "tslib" : ["metaphactory/web/node_modules/tslib/tslib.d.ts"],
      "react": ["metaphactory/web/node_modules/@types/react"],
      "react-addons-css-transition-group": ["metaphactory/web/node_modules/@types/react-addons-css-transition-group"],
      "react-dom": ["metaphactory/web/node_modules/@types/react-dom"],
      "react-bootstrap": ["metaphactory/web/node_modules/@types/react-bootstrap"],
      "immutable": ["metaphactory/web/node_modules/immutable/dist/immutable"],
      "lodash": ["metaphactory/web/node_modules/@types/lodash"],
      "superagent": ["metaphactory/web/node_modules/@types/superagent"],
      "uuid": ["metaphactory/web/node_modules/@types/uuid"]
    },
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "lib": ["dom", "es2015"],
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "importHelpers": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": [
    "*/web/node_modules"
  ],
  "include": [
    "*/web/**/*"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
